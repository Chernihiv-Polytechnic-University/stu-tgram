{
  "extends": "tslint-config-airbnb",
  "rules": {
    "quotemark": [true, "single"],
    "no-unused-variable": true,
    "semicolon": [true, "never"],
    "only-arrow-functions": true,
    "max-line-length": [true, 120],
    "variable-name": {
      "options": [
        "ban-keywords",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    "import-name": false,
    "align": false
  }
}